{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/images/*": ["./src/assets/images/*"],
      "~/hooks/*": ["./src/hooks/*"],
      "~/gsap/*": ["./src/gsap/*"]
    }
  }
}
